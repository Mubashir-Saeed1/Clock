BoxLayout:
    orientation: 'vertical'
    Label:
        text:'[b]00[/b]:00:00'
        markup:True
        font_name: 'Roboto'
        font_size:60
        id:time
    BoxLayout:
        height:90
        orientation:'horizontal'
        padding:20
        spacing:20
        size_hint:(1,None)

        Button:
            id:start_stop
            on_press:app.start_stop()
            text:'Start'
            font_name:'Roboto'
            font_size:25
            bold:True

        Button:
            id:reset
            text:'Reset'
            on_press:app.reset()
            background_normal:'Button_Stop.png'
            background_down:'Button_Start.png'
            font_name:'Roboto'
            font_size:25
            bold:True

    Label:
        id:stopwatch
        text:'00:00.[size=40]00[/size]'
        font_name:'Roboto'
        font_size:60
        markup:True

<ClockLayout>:
    time_prop:time
<RobottoButton@Button>:
    background_normal:'Button_Start.png'
    background_down:'Button_Stop.png'
    border:(2,2,2,2)